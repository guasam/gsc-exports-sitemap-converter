{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "target": "ES6",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@assets/*": ["assets/*"],
      "@common/*": ["src/common/*"],
      "@components/*": ["src/components/*"],
      "@src/*": ["src/*"],
      "@styles/*": ["src/styles/*"],
      "@tools/*": ["tools/*"]
    }
  },
  "include": ["src/**/*", "tools/**/*"]
}
